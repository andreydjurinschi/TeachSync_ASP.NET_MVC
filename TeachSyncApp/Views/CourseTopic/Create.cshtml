@model TeachSyncApp.Models.intermediateModels.CourseTopic

<h1>Create Course</h1>

<form asp-controller="CourseTopic" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CourseId" class="form-label"></label>
        <input asp-for="CourseId" class="form-control" />
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="TopicId" class="form-label"></label>
        <input asp-for="TopicId" class="form-control" />
        <span asp-validation-for="TopicId" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>