@model TeachSyncApp.ViewModels.ReplacementViewModel

<h1>Create Request</h1>

<form asp-action="Create" method="post">
    <div class="form-group mt-3">
        <label class="form-label" for="ScheduleId">Schedule</label>
        <select id="ScheduleId" name="ScheduleId" class="form-select">
            <option value="">Select a schedule</option>
            @foreach (var item in Model.SchedulesList)
            {
                <option value="@item.Id">@item.Teacher.Name @item.Teacher.Surname | @item.WeekDays.Name | @item.StartTime - @item.EndTime</option>
                
            }
        </select>
    </div>
    <div class="form-group mt-3">
        <label class="form-label" for="CourseTopicId">Course | Topic</label>
        <select id="CourseTopicId" name="CourseTopicId" class="form-select">
            <option value="">Select a schedule</option>
            @foreach (var item in Model.CourseTopicsList)
            {
                <option value="@item.Id">@item.Course.Name @item.Topic.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Replacement</button>
    </div>
    
    
</form>
