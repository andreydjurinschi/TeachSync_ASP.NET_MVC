@model Replacement

<div class="container mt-4">
    <h2 class="mb-4">Approve Replacement</h2>

    <form asp-action="Approve" method="post" class="card p-4 shadow-sm">
        <input type="hidden" name="replacementId" value="@Model.Id" />
        <div class="mb-3">
            <label for="teacherId" class="form-label fw-bold">Select Teacher:</label>
            <select id="teacherId" name="teacherId" class="form-select">
                <option value="">-- Select an available teacher --</option>
                @foreach (var teacher in ViewBag.AvailableTeachers)
                {
                    <option value="@teacher.Id">@teacher.Name @teacher.Surname</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">Approve</button>
        </div>
    </form>
</div>
