@model TeachSyncApp.ViewModels.CourseViewModel

<h1>Create Course</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="TeacherId" class="form-label">Teacher</label>
        <select id="TeacherId" name="TeacherId" class="form-select">
            <option value="">Select a teacher</option>
            @if (Model.TeachersList != null)
            {
                foreach (var item in Model.TeachersList)
                {
                    <option value="@item.Id">@item.Name @item.Surname</option>
                }
            }
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
