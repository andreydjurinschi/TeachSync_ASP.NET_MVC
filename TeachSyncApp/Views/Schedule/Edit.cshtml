@model TeachSyncApp.ViewModels.ScheduleViewModel

<h1>Edit Schedule</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }

    <div class="form-group">
        <label class="control-label">Day of Week</label>
        @foreach (var day in Model.DayOfWeekList)
        {
            <div class="form-check">
                <input type="radio" asp-for="DayOfWeekId" class="form-check-input" value="@day.Id" id="day-@day.Id">
                <label class="form-check-label" for="day-@day.Id">@day.Name</label>
            </div>
        }
        <span asp-validation-for="DayOfWeekId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Teacher</label>
        @foreach (var teacher in Model.TeacherList)
        {
            <div class="form-check">
                <input type="radio" asp-for="TeacherId" class="form-check-input" value="@teacher.Id" id="teacher-@teacher.Id">
                <label class="form-check-label" for="teacher-@teacher.Id">@teacher.Name</label>
            </div>
        }
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Classroom</label>
        @foreach (var classroom in Model.ClassRoomList)
        {
            <div class="form-check">
                <input type="radio" asp-for="ClassRoomId" class="form-check-input" value="@classroom.Id" id="classroom-@classroom.Id"
                       >
                <label class="form-check-label" for="classroom-@classroom.Id">@classroom.Name</label>
            </div>
        }
        <span asp-validation-for="ClassRoomId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Group-Course</label>
        @foreach (var groupCourse in Model.GroupCourseList)
        {
            <div class="form-check">
                <input type="radio" asp-for="GroupCourseId" class="form-check-input" value="@groupCourse.Id" id="groupcourse-@groupCourse.Id"
                       >
                <label class="form-check-label" for="groupcourse-@groupCourse.Id">
                    @groupCourse.Group.Name - @groupCourse.Course.Name
                </label>
            </div>
        }
        <span asp-validation-for="GroupCourseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Start Time</label>
        <input asp-for="StartTime" class="form-control" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label">End Time</label>
        <input asp-for="EndTime" class="form-control" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to list</a>
</div>
