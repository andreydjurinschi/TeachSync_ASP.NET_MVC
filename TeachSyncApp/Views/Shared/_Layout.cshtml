@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TeachSync</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TeachSyncApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container w-100">

            <a class="navbar-brand fs-3 fw-bold" href="#">Teach Sync App</a>

            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav mx-auto my-2 my-lg-0 navbar-nav-scroll text-center" style="--bs-scroll-height: 100px;">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "User")">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Course")">Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Group")">Groups</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Classroom")">ClassRooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Topic")">Topics</a>
                            </li>
                        }

                        if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Schedule")">CRUD Schedule</a>
                            </li>
                        }

                        if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Replacement")">Replacement</a>
                            </li>
                        }
                    }
                </ul>
            </div>
            <ul class="navbar-nav ms-auto">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Profile", "Account")">My account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Account")">Sign in</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>


<style>
    .navbar-nav .nav-item {
        margin-left: 20px;
        margin-right: 20px;
    }

    .navbar-brand {
        color: #000;
        font-weight: bold;
    }

    .navbar-nav .nav-link {
        color: #000;
        font-size: 18px;
    }

    .navbar-nav .nav-link:hover {
        color: #007bff;
    }

    .navbar-collapse {
        justify-content: center;
    }
</style>



<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - TeachSyncApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>